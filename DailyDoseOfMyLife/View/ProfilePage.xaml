<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DailyDoseOfMyLife.View.ProfilePage"
             Title="ProfilePage"
             >
    <VerticalStackLayout Spacing="8">
        <Label Text="Welcome" VerticalOptions="Center" HorizontalOptions="Center"/>
        <Label 
            Text="{Binding Name}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button VerticalOptions="Center" HorizontalOptions="Center" x:Name="GoBack" Text="Home" Clicked="GoBack_Clicked"/>
        <Button HorizontalOptions="Center" VerticalOptions="Center" x:Name="LogOut" Text="Log Out" Clicked="LogOut_Clicked"/>
    </VerticalStackLayout>
</ContentPage>