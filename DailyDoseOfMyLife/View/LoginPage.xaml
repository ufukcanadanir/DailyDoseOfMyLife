<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DailyDoseOfMyLife.View.LoginPage"
             Title=""
             >
    <VerticalStackLayout Spacing=" 8" Padding="20" HorizontalOptions="Center">
        <Label Text="Log In" HorizontalTextAlignment="Center" FontSize="Header"/>
        <Entry x:Name="UserNameEntry" Placeholder="Enter your username"/>
        <Button x:Name="LogIn" Text="Log In" BackgroundColor="CornflowerBlue" Clicked="LogIn_Clicked"/>
    </VerticalStackLayout>
</ContentPage>